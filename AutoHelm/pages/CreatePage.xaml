<Page x:Class="AutoHelm.pages.CreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoHelm.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colours.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource BlueAccent}" FontFamily="Arial Black" FontSize="48" x:Name="createTitle">
            <TextBlock.Text>
                Create
            </TextBlock.Text>
        </TextBlock>
        <TextBox x:Name="TempTxt" Height="30" Width="200" Background="{x:Null}" Foreground="{DynamicResource BlueAccent}" Margin="300,258,300,162"></TextBox>
    </Grid>
</Page>
