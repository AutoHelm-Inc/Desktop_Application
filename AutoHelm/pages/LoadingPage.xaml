<Page x:Class="AutoHelm.pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoHelm.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadingPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colours.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Image x:Name="loadingLogo" Source="/pages/MainWindow/autohelm_logo.png"></Image>
        <TextBlock x:Name="loadingTitle" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" FontSize="80" Foreground="{DynamicResource BlueAlternateAccent}" Margin="0,475,0,0" Opacity="0"> AutoHelm</TextBlock>
    </Grid>
</Page>
