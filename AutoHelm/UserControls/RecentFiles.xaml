<UserControl x:Class="AutoHelm.UserControls.RecentFiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoHelm.UserControls"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colours.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Rectangle Fill="{StaticResource TwoLighterThanPrimary}"  RadiusX="10" RadiusY="10"
               Width="200" Height="150" Margin="2"  HorizontalAlignment="Center"></Rectangle>
        <TextBlock x:Name="recTempBox" Text="Temp" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource BlueAccent}"> </TextBlock>
    </Grid>
</UserControl>
