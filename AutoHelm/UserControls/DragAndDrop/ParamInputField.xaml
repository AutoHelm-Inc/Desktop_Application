<UserControl x:Class="AutoHelm.UserControls.DragAndDrop.ParamInputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoHelm.UserControls.DragAndDrop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colours.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <StackPanel x:Name="InputStackPanel" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label x:Name="InputLabel" FontSize="15" Foreground="White" Margin="0,15,0,0"></Label>
            <TextBox x:Name="InputField" Height="25" Width="125" Margin="15,15,0,0" Foreground="White" Background="{DynamicResource OneLighterThanPrimary}" BorderBrush="{DynamicResource TwoLighterThanPrimary}" VerticalContentAlignment="Center"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
